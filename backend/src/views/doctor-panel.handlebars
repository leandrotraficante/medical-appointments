<div class="row">
    <!-- Doctor Info Card -->
    <div class="col-lg-4 mb-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-user-md fa-4x text-primary mb-3"></i>
                <h5 class="card-title">{{doctor.name}}</h5>
                <p class="card-text text-muted">{{doctor.specialties}}</p>
                <p class="card-text"><small class="text-muted">License: {{doctor.license}}</small></p>
                <div class="d-grid">
                    <button class="btn btn-outline-primary btn-sm" onclick="editProfile()">
                        <i class="fas fa-edit me-1"></i>Edit Profile
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Today's Schedule -->
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-calendar-day me-2"></i>Today's Schedule</h5>
            </div>
            <div class="card-body">
                {{#if todayAppointments}}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Time</th>
                                    <th>Patient</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each todayAppointments}}
                                <tr>
                                    <td>{{formatTime date}}</td>
                                    <td>
                                        <strong>{{patient.name}} {{patient.lastname}}</strong><br>
                                        <small class="text-muted">{{patient.personalId}}</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-{{#if (eq status 'pending')}}warning{{else if (eq status 'confirmed')}}success{{else if (eq status 'cancelled')}}danger{{else}}secondary{{/if}}">
                                            {{status}}
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            {{#if (eq status 'pending')}}
                                                <button class="btn btn-success btn-sm" onclick="confirmAppointment('{{_id}}')">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                                <button class="btn btn-danger btn-sm" onclick="cancelAppointment('{{_id}}')">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            {{else if (eq status 'confirmed')}}
                                                <button class="btn btn-primary btn-sm" onclick="startAppointment('{{_id}}')">
                                                    <i class="fas fa-play"></i>
                                                </button>
                                            {{/if}}
                                            <button class="btn btn-info btn-sm" onclick="viewDetails('{{_id}}')">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                {{else}}
                    <div class="text-center py-4">
                        <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                        <h6 class="text-muted">No appointments scheduled for today</h6>
                        <p class="text-muted">Enjoy your free day!</p>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<!-- Upcoming Appointments -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-calendar-week me-2"></i>Upcoming Appointments</h5>
            </div>
            <div class="card-body">
                {{#if upcomingAppointments}}
                    <div class="row">
                        {{#each upcomingAppointments}}
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="card border-{{#if (eq status 'pending')}}warning{{else if (eq status 'confirmed')}}success{{else}}secondary{{/if}}">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h6 class="card-title mb-0">{{patient.name}} {{patient.lastname}}</h6>
                                        <span class="badge bg-{{#if (eq status 'pending')}}warning{{else if (eq status 'confirmed')}}success{{else}}secondary{{/if}}">
                                            {{status}}
                                        </span>
                                    </div>
                                    <p class="card-text">
                                        <i class="fas fa-calendar me-1"></i>{{formatDate date}}<br>
                                        <i class="fas fa-clock me-1"></i>{{formatTime date}}<br>
                                        <i class="fas fa-user me-1"></i>{{patient.personalId}}
                                    </p>
                                    <div class="d-grid gap-2">
                                        {{#if (eq status 'pending')}}
                                            <button class="btn btn-success btn-sm" onclick="confirmAppointment('{{_id}}')">
                                                <i class="fas fa-check me-1"></i>Confirm
                                            </button>
                                        {{/if}}
                                        <button class="btn btn-info btn-sm" onclick="viewDetails('{{_id}}')">
                                            <i class="fas fa-eye me-1"></i>View Details
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                {{else}}
                    <div class="text-center py-4">
                        <i class="fas fa-calendar-alt fa-3x text-muted mb-3"></i>
                        <h6 class="text-muted">No upcoming appointments</h6>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<script>
function editProfile() {
    alert('Edit profile feature coming soon!');
}

function confirmAppointment(appointmentId) {
    if (confirm('Confirm this appointment?')) {
        // API call to confirm appointment
        console.log('Confirming appointment:', appointmentId);
    }
}

function cancelAppointment(appointmentId) {
    if (confirm('Cancel this appointment?')) {
        // API call to cancel appointment
        console.log('Cancelling appointment:', appointmentId);
    }
}

function startAppointment(appointmentId) {
    // API call to start appointment
    console.log('Starting appointment:', appointmentId);
}

function viewDetails(appointmentId) {
    // Show appointment details modal
    console.log('Viewing details for appointment:', appointmentId);
}
</script>
